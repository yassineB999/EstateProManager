@{
    <!-- Navbar -->
    <nav class="main-header navbar navbar-expand navbar-white navbar-light">
        <!-- Left navbar links -->
        <ul class="navbar-nav">
            <li class="nav-item">
                <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
            </li>
            <li class="nav-item d-none d-sm-inline-block">
                <a href="@Url.Action("Dashboard")" class="nav-link">Tableau de bord</a>
            </li>
        </ul>

        <!-- Right navbar links -->
        <ul class="navbar-nav ml-auto">

            <li class="nav-item">
                <a class="nav-link" data-widget="fullscreen" href="#" role="button">
                    <i class="fas fa-expand-arrows-alt"></i>
                </a>
            </li>

            <li class="nav-item">
                <a class="nav-link" href="@Url.Action("Diconnect")" role="button">
                    <i class="fas fa-arrow-alt-circle-right"></i>
                </a>
            </li>
        </ul>
    </nav>
    <!-- /.navbar -->
    <!-- Main Sidebar Container -->
    <aside class="main-sidebar sidebar-dark-primary elevation-4">
        <!-- Brand Logo -->
        <a href="@Url.Action("Dashboard")" class="brand-link">
            <img src="~/dashboard_assets/dist/img/AdminLTELogo.png" alt="AdminLTE Logo" class="brand-image img-circle elevation-3" style="opacity: .8">
            <span class="brand-text font-weight-light">@EstateProManager.Models.Utility.ApplicationName</span>
        </a>

        <!-- Sidebar -->
        <div class="sidebar">
            <!-- Sidebar user (optional) -->
            <div class="user-panel mt-3 pb-3 mb-3 d-flex">
                <div class="image">
                    <img src="~/dashboard_assets/dist/img/user2-160x160.jpg" class="img-circle elevation-2" alt="User Image">
                </div>
                <div class="info">
                    <a href="@Url.Action("MyAccount")" class="d-block">@ViewBag.Prenom @ViewBag.NOM</a>
                </div>
            </div>


            <!-- Sidebar Menu -->
            <nav class="mt-2">
                <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                    <li class="nav-item">
                        <a href="@Url.Action("ManageUsers")" class="nav-link">
                            <i class="nav-icon fas fa-th"></i>
                            <p>
                                Gestions des uilisateurs
                            </p>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="@Url.Action("ManageProperties")" class="nav-link">
                            <i class="nav-icon fas fa-th"></i>
                            <p>
                                Gestions des proprietees
                            </p>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="@Url.Action("ManageBuyers")" class="nav-link">
                            <i class="nav-icon fas fa-th"></i>
                            <p>
                                Gestions des ventes
                            </p>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="@Url.Action("ManageRentals")" class="nav-link">
                            <i class="nav-icon fas fa-th"></i>
                            <p>
                                Gestion des contrats
                            </p>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="@Url.Action("ManageDemands")" class="nav-link">
                            <i class="nav-icon fas fa-th"></i>
                            <p>
                                Gestion des demandes
                            </p>
                        </a>
                    </li>
                </ul>
            </nav>
            <!-- /.sidebar-menu -->
        </div>
        <!-- /.sidebar -->
    </aside>
}
